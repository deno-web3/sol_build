{
  "lint": {
    "files": {
      "include": ["./**/*.ts"],
      "exclude": ["./**/*.js"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./**/*.ts", "./**/*.md", "./**/*.json"],
      "exclude": ["./**/*.js"]
    },
    "options": {
      "singleQuote": true,
      "semiColons": false,
      "useTabs": false,
      "indentWidth": 2,
      "lineWidth": 120
    }
  },
  "test": {
    "files": {
      "exclude": ["./**/*.js", "examples"]
    }
  },
  "tasks": {
    "test": "deno test --no-check --allow-net --allow-read --allow-write --coverage=coverage",
    "cov": "deno coverage coverage --lcov > coverage.lcov"
  }
}
